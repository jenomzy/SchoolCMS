<h2 class="page-header">Search Staff</h2>
<form method="post" action="/users/searchuser">
    <div class="form-group">
        <label>Staffs</label>
        <input type="text" class="form-control" name="user">
    </div>
    <button type="submit" class="btn btn-default">Search</button>
</form>

<form method="post" action="/users/updatestaffinfo">
    <div>
        <div style="height: 50px; width: 50px;">
            <img src="/images/gigtechicon.png">
        </div>
        <div>
            <label>UserName:</label>
            <input type="text" name="username" value="{{user.username}}">
        </div>
        <br/>
        <div>
            <label>Account Type:</label>
            <label>{{user.account_type}}</label>
        </div>
        <br/>
        <div>
            <label>Full Name:</label>
            <input type="text" name="fullname" value="{{user.name}}">
        </div>
        <br/>
        <div>
            <label>First Name:</label>
            <input type="text" name="firstname" value="{{user.firstname}}">
        </div>
        <br/>
        <div>
            <label>Middle Name:</label>
            <input type="text" name="middlename" value="{{user.middlename}}">
        </div>
        <br/>
        <div>
            <label>Last Name:</label>
            <input type="text" name="lastname" value="{{user.lastname}}"/>
        </div>
        <br/>
        <div>
            <label>Sex:</label>
            <input type="text" name="sex" value="{{user.sex}}"/>
        </div>
        <br/>
        <div>
            <label>Email:</label>
            <input type="text" name="email" value="{{user.email}}"/>
        </div>
        <br/>
        <div>
            <label>Address:</label>
            <input type="text" name="address" value="{{user.address}}"/>
        </div>
        <br/>
        <div>
            <label>Phone Number:</label>
            <input type="text" name="phoneno" value="{{user.phone}}"/>
        </div>
        <button type="submit" class="btn btn-default">Update</button>
    </div>
</form>